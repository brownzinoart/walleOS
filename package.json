{
  "name": "wallegpt-portfolio",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview --host",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "analyze": "vite-bundle-analyzer",
    "docs": "typedoc",
    "docs:serve": "typedoc && npx serve docs",
    "performance": "vite-bundle-analyzer dist/assets/*.js",
    "clean": "rm -rf dist .nyc_output coverage",
    "prepare": "npm run type-check && npm run lint && npm run test",
    "deploy": "npm run prepare && npm run build"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.0",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.0",
    "terser": "^5.44.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.0",
    "vite": "^7.1.9",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^3.2.4"
  }
}
